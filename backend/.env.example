# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/web-yarden
TEST_MONGODB_URI=mongodb://localhost:27017/web-yarden-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Admin Credentials (for initial seed)
ADMIN_EMAIL=admin@webyarden.com
ADMIN_PASSWORD=ChangeMe123!

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL
CLIENT_URL=http://localhost:3000

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@webyarden.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=300

# Logging
LOG_LEVEL=debug
SILENT_TESTS=false

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-session-secret-change-this

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
CONTACT_EMAIL=contact@webyarden.com

# CORS
FRONTEND_URL=http://localhost:3000
